<div class="container-fluid">
  <div class="row content">
    <h1>Caesar's Cipher</h1>
    
    <form id="encryption-form">
    
      <div class="form-group col-md-5">
        <textarea class="form-control" name="input_string" rows="5"><%= string %></textarea>
      </div>
      
      
      <div class="form-group col-md-1">
        <input class= "form-control" name="shift_value" placeholder="Key"></input><br>
        <button type='submit' class="btn">Encrypt!</button>
      </div>
      
      <div class="form-group col-md-5">
        <textarea class="form-control" rows="5"><%= message %></textarea>
      </div>
    
    </form>
  </div>
</div>
